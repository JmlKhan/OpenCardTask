@model Library.ViewModels.AuthorViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Add" class="btn btn-outline-info ml-auto" role="button">New Author</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                AuthorID
            </th>
            <th>
                Name
            </th>
            <th>
                Biography
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Authors) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Biography)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AuthorID">Edit</a> |
                <a asp-action="Remove" asp-route-id="@item.AuthorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
